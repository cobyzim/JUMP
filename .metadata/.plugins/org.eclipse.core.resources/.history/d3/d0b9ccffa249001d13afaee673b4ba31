package com.cognixia.corejava.arrayexercise;

import java.util.Arrays;

public class ArrayExercise {

	public static void main(String[] args) {
		// Check if arrays match
		int[] numArr1 = {1, 3, 5, 0};
		int[] numArr2 = {0, 5, 1, 3};
		
		Arrays.sort(numArr1);
		Arrays.sort(numArr2);
		
		System.out.println(checkForMatch(numArr1, numArr2));
		
		
		
		//Find missing number in array
		int[] numArr = {1, 2, 3, 4, 6, 7, 8, 9, 10};
		int missingNum = findMissingNumber(numArr);
		System.out.println(missingNum);
		
		
	}

	private static int findMissingNumber(int[] numArr) {
		int missingNumber = 0;
		int counter = 1;
		for (int i = 0; i < numArr.length; i++) {
			if (numArr[i] != counter) {
				missingNumber = numArr[i];
				return missingNumber;
			}
			counter++;
		}
		
	}

	private static boolean checkForMatch(int[] arr1, int[] arr2) {
		boolean matching = true;
		
		for (int i = 0; i < arr1.length; i++) {
			if (arr1[i] != arr2[i]) {
				matching = false;
			}
		}
		
		return matching;
	}

}
